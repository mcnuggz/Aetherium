@using Aetherium.Models.ViewModels
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="container mt-5 text-light" style="max-width: 500px;">
    <div class="card p-4 shadow" id="resetPasswordCard">
        <h2 class="header-title">Reset Your Password</h2>
        <hr />
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <div class="input-group">
                    <input asp-for="NewPassword" class="form-control" type="password" id="newPassword" />
                    <button type="button" class="btn btn-secondary" onclick="togglePassword('newPassword', 'toggleIcon1')"><i class="fa-solid fa-eye" id="toggleIcon1"></i></button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPassword" />
                    <button type="button" class="btn btn-secondary" onclick="togglePassword('confirmPassword', 'toggleIcon2')"><i class="fa-solid fa-eye" id="toggleIcon2"></i></button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Reset Password</button>

            <p class="mt-3">
                If your link has expired, you can <a href="/Home/ForgotPassword">request a new one</a>.
            </p>
        </form>
    </div>
</div>

<script>
    function togglePassword(fieldId, toggleIcon) {
        const input = document.getElementById(fieldId);
        var icon = document.getElementById(toggleIcon);
        const isHidden = input.type === "password";

        input.type = isHidden ? "text" : "password";
        icon.classList.toggle("fa-eye", !isHidden);
        icon.classList.toggle("fa-eye-slash", isHidden);
    }
</script>
