@using Aetherium.Models.ViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}
<div class="container mt-5 text-light" style="max-width: 500px;">
    <div class="card p-4 shadow" id="forgotPasswordCard">
        <h2 class="header-title text-light">Forgot Your Password?</h2>
        <p>Enter your email address and we’ll send you a link to reset your password.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send Reset Link</button>
            <a class="btn btn-secondary" href="/Home/"><i class="fa-solid fa-arrow-left me-1"></i>Go Back</a>
        </form>
    </div>
</div>