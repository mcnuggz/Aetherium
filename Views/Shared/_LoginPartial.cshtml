@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

@if (!string.IsNullOrEmpty(username))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-light">Hello, @username!</span>
        </li>
        <li class="nav-item">
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-link nav-link">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    </ul>
}
